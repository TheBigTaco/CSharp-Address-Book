@{
  Layout = "_Layout";
}

<h1>Your Contacts:</h1>
<br>
@{
  if (@Model.Count <= 0)
  {
    <p>No Contacts Added Yet</p>
    <br>
  }
  else {
    <ul>
      @foreach (var contact in Model)
      {
        <li><a href='/contact/@contact.GetId()'>@contact.GetName()</a></li>
      }
    </ul>
  }
}
<div id="footer">
  <p><a href="/contact/form" id="new">Add a new Contact</a></p>
  <br>
  <p><a href="/contact/search">Search Contacts</a></p>
  <br>
</div>
<br>
<form id="clear-button" action="/contact/clear" method="post">
  <button type="submit" name="button">Clear Contact List</button>
</form>
