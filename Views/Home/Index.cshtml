@{
  Layout = "_Layout";
}

<h1 class="jumbotron">Your Contacts:</h1>
@{
  if (@Model.Count <= 0)
  {
    <p>No Contacts Added Yet</p>
  }
  else {
    <ul>
      @foreach (var contact in Model)
      {
        <li><a href='/contact/@contact.GetId()'>@contact.GetName()</a></li>
      }
    </ul>
  }
}
<p><a href="/contact/form">Add a new Contact</a></p>
<br>
<p><a href="/contact/search">Search Contacts</a></p>
<br>
<form action="/contact/clear" method="post">
  <button type="submit" name="button">Clear Contact List</button>
</form>
